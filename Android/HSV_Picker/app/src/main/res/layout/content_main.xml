<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/third"
        android:id="@+id/swatchText"
        android:layout_alignParentTop="true"
        android:background="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hue_lbl"
        android:id="@+id/txt_hue"
        android:layout_below="@+id/swatchText"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:typeface="normal"
        android:paddingTop="5dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/seekBar"
        android:id="@+id/seekBar_hue"
        android:paddingTop="3dp"
        android:background="@drawable/hue_gradient"
        android:progressTint="#1a1919"
        android:progressBackgroundTint="#395984"
        android:layout_below="@+id/txt_hue"
        android:layout_alignParentEnd="true"
        android:max="359" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sat_lbl"
        android:id="@+id/txt_sat"
        android:layout_below="@+id/seekBar_hue"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:typeface="normal"
        android:paddingTop="10dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/seekBar"
        android:id="@+id/seekBar_sat"
        android:paddingTop="3dp"
        android:background="@drawable/sat_gradient"
        android:layout_below="@+id/txt_sat"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lightness_lbl"
        android:id="@+id/txt_lightness"
        android:layout_below="@+id/seekBar_sat"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:typeface="normal"
        android:paddingTop="10dp"
        android:textSize="@dimen/abc_text_size_large_material" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/seekBar"
        android:id="@+id/seekBar_ligthness"
        android:paddingTop="3dp"
        android:background="@drawable/lightness_gradient"
        android:progressTint="#1a1919"
        android:layout_below="@+id/txt_lightness"
        android:layout_alignParentStart="true"
        android:progressBackgroundTint="#395984" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/seekBar_ligthness"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:scrollIndicators="none">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scrollIndicators="none"
            android:minHeight="60dp">

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/blackButton"
                android:background="#000000"
                android:layout_marginRight="8dp" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/redButton"
                android:background="#ff0000"
                android:layout_marginRight="8dp" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/limeButton"
                android:layout_marginRight="8dp"
                android:background="#84eb61" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/blueButton"
                android:layout_marginRight="8dp"
                android:background="#054dd1" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/yellowButton"
                android:layout_marginRight="8dp"
                android:background="#ddd41f" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/cyanButton"
                android:layout_marginRight="8dp"
                android:background="#00ffff" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/magentaButton"
                android:layout_marginRight="8dp"
                android:background="#ff00ff"
                android:clickable="true" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/silverButton"
                android:layout_marginRight="8dp"
                android:background="#dedcdc" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/grayButton"
                android:layout_marginRight="8dp"
                android:background="#696868" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/maroonButton"
                android:layout_marginRight="8dp"
                android:background="#800000" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/oliveButton"
                android:layout_marginRight="8dp"
                android:background="#808000" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/greenButton"
                android:layout_marginRight="8dp"
                android:background="#2ffd01" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/purpleButton"
                android:layout_marginRight="8dp"
                android:background="#7203f8" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/tealButton"
                android:layout_marginRight="8dp"
                android:background="#008080" />

            <Button
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:id="@+id/navyButton"
                android:layout_marginRight="8dp"
                android:background="#020c79" />

        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
